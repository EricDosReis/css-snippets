{
  "name": "granular-css",
  "version": "0.9.0",
  "description": "Some useful CSS components",
  "main": "app.js",
  "scripts": {
    "build:css": "node-sass --output-style compressed src/scss/main.scss dist/css/main.css",
    "watch:css": "onchange 'src/scss/**/*.scss' -- npm run build:css",
    "serve": "browser-sync start --server --files 'dist/css/*.css, dist/js/*.js'",
    "watch": "npm-run-all --parallel serve watch:*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EricDosReis/granular-css.git"
  },
  "keywords": [
    "css",
    "snippets"
  ],
  "author": "Eric dos Reis",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EricDosReis/granular-css/issues"
  },
  "homepage": "https://github.com/EricDosReis/granular-css#readme",
  "dependencies": {},
  "devDependencies": {
    "browser-sync": "^2.24.4",
    "http-server": "^0.11.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.0.0"
  }
}
